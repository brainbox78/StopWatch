<Window x:Class="StopWatch.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="StopWatch" Height="300" Width="Auto" WindowStartupLocation="CenterScreen"
    Background="Transparent" WindowStyle="None" OpacityMask="White" AllowsTransparency="True" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid>
        <Image Source="Resource/StopWatchSmall.png"/>
            <Image Source="Resource/pointer_arrow.png" Name="Arrow" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image.RenderTransform>
                <RotateTransform x:Name="seconds"  CenterX="0" CenterY="110" Angle="0" />
            </Image.RenderTransform>
        </Image>
        
            <Button Background="Transparent" Content="X" BorderBrush="Transparent" Height="20" Width="20" Name="button1" Click="button1_Click" Margin="0,0,50,-100" />
            <Button Background="Transparent" Content="-" BorderBrush="Transparent" Height="20" Width="20" Name="button2" Click="button2_Click" Margin="0,0,-50,-100" />
       
    </Grid>
</Window>